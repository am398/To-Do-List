
<%- include('header'); -%>
    <div class="box" id="heading">
        <h1>
            <%= Day %>
        </h1>
    </div>

    <% if(List !=null ) {%>
        <div class="box" id="heading">
            <h1>
                <%= List %>
            </h1>
        </div>
        <% } %>

            <div class="box">

                <% for (var i=0;i<newListItem.length;i++) {%>
                    <div class="item">
                        <input type="checkbox">
                        <p>
                            <%= newListItem[i] %>
                        </p>
                    </div>
                    <% } %>


                        <form class="item" action="/" method="post">
                            <input type="text" name="newItem" placeholder="Enter Item">
                            <button type="submit" name="List" value="<%= List %>">+</button>
                        </form>
            </div>

<%- include('footer'); -%>
